---
import Section from './Section.astro';
import Button from './Button.astro';
---
<Section variant="default" padding="lg" id="contact">
  <div class="bg-neutral-900 text-white px-8 py-12">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Left Column - Profile -->
      <div class="flex flex-col items-center lg:items-start">
        <div class="w-32 h-40 bg-white overflow-hidden mb-6">
          <img 
            src="https://images.unsplash.com/photo-1494790108755-2616b612b47c?w=300&h=400&fit=crop&crop=face" 
            alt="Monika Was"
            class="w-full h-full object-cover"
          />
        </div>
        <div class="text-center lg:text-left">
          <div class="text-sm text-neutral-300 uppercase tracking-wider font-medium mb-1">
            MONIKA WAS
          </div>
          <div class="text-xs text-neutral-500 uppercase tracking-wider">
            NEW BUSINESS DEVELOPER
          </div>
        </div>
      </div>
      
      <!-- Right Column - CTA -->
      <div class="space-y-10">
        <div>
          <h2 class="text-xl md:text-2xl lg:text-3xl font-medium text-white leading-tight max-w-2xl">
            Build a brand with us, <span class="text-neutral-400">that will really support your business.</span>
          </h2>
        </div>
        
        <div class="border-t border-neutral-700 pt-10">
          <div class="flex items-end justify-between">
            <div class="text-xs text-neutral-500 uppercase tracking-wider leading-tight">
              WE WILL RESPOND IN LESS<br />THAN 48 HOURS.
            </div>
            
            <a 
              href="/contact" 
              class="inline-flex items-center text-white text-xl font-medium hover:text-neutral-300 transition-colors duration-300 group"
            >
              <span>Let's talk</span>
              <span class="ml-4 group-hover:translate-x-1 transition-transform duration-300">â†’</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Section>
