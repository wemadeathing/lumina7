---
export interface Props {
  variant?: 'default' | 'hover' | 'bordered' | 'flat';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  class?: string;
  href?: string;
  target?: string;
  rel?: string;
}

const { 
  variant = 'default', 
  padding = 'md', 
  class: className = '',
  href,
  target,
  rel,
  ...rest 
} = Astro.props;

const baseClasses = 'bg-white overflow-hidden transition-all duration-300';

const variants = {
  default: 'rounded-lg shadow-sm',
  hover: 'rounded-lg shadow-sm hover:shadow-lg hover:-translate-y-1 cursor-pointer',
  bordered: 'rounded-lg border border-gray-200 hover:border-gray-300',
  flat: 'rounded-lg'
};

const paddings = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8'
};

const classes = `${baseClasses} ${variants[variant]} ${paddings[padding]} ${className}`;

const Element = href ? 'a' : 'div';
---

<Element 
  class={classes}
  href={href}
  target={target}
  rel={rel}
  {...rest}
>
  <slot />
</Element>
