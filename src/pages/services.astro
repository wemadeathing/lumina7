<Layout 
  title="Services | Lumina7 - Innovation-Powered Design & Development"
  description="AI-augmented design services delivered at the speed of light. Brand identity, website design, rapid prototyping, and development—with breakthrough innovation and strategic speed."
>
  <Header />
  
  <!-- Hero Section -->
  <section class="pt-24 pb-20 px-6 lg:px-8 bg-white">
    <div class="max-w-7xl mx-auto">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-6xl font-medium text-gray-900 mb-8 leading-tight mt-8">
          Innovation-powered design services delivered at the speed of light
        </h1>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="services-hero bg-black text-white relative overflow-hidden">
    <div class="max-w-7xl mx-auto">
      <div class="space-y-0">
        {services.map((service, index) => (
          <div class="service-card group cursor-pointer" data-service={index}>
            <div class="px-6 lg:px-8 py-12">
              <div class="grid lg:grid-cols-12 gap-8 items-start">
                <!-- Left side - Duration and Title -->
                <div class="lg:col-span-5">
                  <span class="text-xs text-black bg-white px-3 py-1 font-medium uppercase tracking-wide mb-4 inline-block">
                    {service.duration}
                  </span>
                  <h2 class="text-2xl md:text-3xl font-medium text-white leading-tight">
                    {service.title}
                  </h2>
                </div>
                
                <!-- Right side - Description and Capabilities -->
                <div class="lg:col-span-7">
                  <p class="text-gray-300 leading-relaxed text-lg mb-6">
                    {service.description}
                  </p>
                  
                  <div class="flex flex-wrap gap-3 mb-6">
                    {service.capabilities.map(capability => (
                      <span class="text-xs text-white border border-gray-600 px-4 py-2 hover:bg-white hover:text-black transition-colors cursor-pointer uppercase tracking-wide">
                        {capability}
                      </span>
                    ))}
                  </div>
                  
                  <button class="text-white hover:text-gray-300 transition-colors flex items-center gap-2 group">
                    <span class="text-2xl group-hover:translate-x-2 transition-transform duration-300">→</span>
                  </button>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-32 px-6 lg:px-8 bg-gray-100">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-20">
        <h2 class="text-4xl md:text-5xl font-medium text-black mb-8">
          Get to know our process
        </h2>
      </div>
      
      <div class="space-y-8">
        {processSteps.map((step, index) => (
          <div class="process-step bg-gray-300 p-8 lg:p-12">
            <div class="grid lg:grid-cols-12 gap-8 items-start">
              <!-- Left side - Number, Phase, Title -->
              <div class="lg:col-span-4">
                <h2 class="text-2xl md:text-3xl font-bold text-black leading-none mb-4">
                  {step.number}
                </h2>
                <h2 class="text-2xl md:text-3xl font-medium text-black mb-4">{step.phase}</h2>
                <h3 class="text-lg font-medium text-black mb-4">{step.title}</h3>
                <p class="text-sm text-gray-600 uppercase tracking-wide">{step.duration}</p>
              </div>
              
              <!-- Spacer -->
              <div class="lg:col-span-1"></div>
              
              <!-- Right side - Description and Details -->
              <div class="lg:col-span-7">
                <p class="text-gray-700 leading-relaxed mb-6">
                  {step.description}
                </p>
                
                <ul class="space-y-3">
                  {step.details.map(detail => (
                    <li class="text-sm text-gray-700 flex items-start gap-3">
                      <span class="w-1 h-1 bg-gray-600 rounded-full mt-2 flex-shrink-0"></span>
                      {detail}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <FAQ faqItems={faqItems} />

  <CTA />

  <Footer />
</Layout>

<script>
  // Service card hover effects
  document.addEventListener('DOMContentLoaded', function() {
    const serviceCards = document.querySelectorAll('.service-card');
    
    serviceCards.forEach(card => {
      card.addEventListener('mouseenter', function() {
        this.style.transform = 'translateY(-2px)';
        this.style.transition = 'transform 0.3s ease';
      });
      
      card.addEventListener('mouseleave', function() {
        this.style.transform = 'translateY(0)';
      });
    });
  });
</script>

<style>
  .services-hero {
