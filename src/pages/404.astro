---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
---

<Layout title="Page Not Found | Lumina7" description="The page you're looking for doesn't exist.">
  <Header />
  
  <!-- 404 Section -->
  <section class="pt-24 pb-20 px-6 lg:px-8 bg-white min-h-screen flex items-center">
    <div class="max-w-4xl mx-auto text-center">
      <div class="mb-8">
        <h1 class="text-6xl md:text-8xl font-bold text-gray-200 mb-4">404</h1>
        <h2 class="text-3xl md:text-4xl font-medium text-gray-900 mb-6">
          Page not found
        </h2>
        <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
          Sorry, we couldn't find the page you're looking for. The page might have been moved, deleted, or you might have entered the wrong URL.
        </p>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/" variant="primary" size="lg">
          Go Home
        </Button>
        <Button href="/work" variant="outline" size="lg">
          View Our Work
        </Button>
      </div>
      
      <!-- Helpful Links -->
      <div class="mt-16 pt-8 border-t border-gray-200">
        <h3 class="text-lg font-medium text-gray-900 mb-6">
          Looking for something specific?
        </h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
          <a href="/work" class="text-gray-600 hover:text-gray-900 transition-colors">
            Our Work
          </a>
          <a href="/services" class="text-gray-600 hover:text-gray-900 transition-colors">
            Services
          </a>
          <a href="/insights" class="text-gray-600 hover:text-gray-900 transition-colors">
            Insights
          </a>
          <a href="/contact" class="text-gray-600 hover:text-gray-900 transition-colors">
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  /* Add some subtle animation */
  h1 {
    animation: fadeInUp 0.8s ease-out;
  }
  
  h2 {
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }
  
  p {
    animation: fadeInUp 0.8s ease-out 0.4s both;
  }
  
  .flex {
    animation: fadeInUp 0.8s ease-out 0.6s both;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
