---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CTA from '../components/CTA.astro';

const whyLumina7 = [
  {
    number: "01",
    title: "Innovation-Powered Approach",
    description: "We combine cutting-edge AI tools with expert insight to deliver breakthrough solutions. Our AI-augmented workflows enable more exploration, better outcomes, and innovative thinking—accelerating the creative process without sacrificing quality or focused execution.",
    image: "/assets/images/about/founder-led.jpg"
  },
  {
    number: "02", 
    title: "Speed of Light Delivery",
    description: "Like light itself (Lumina), we move fast—but with precision. Our rapid iteration and development processes deliver professional results without the traditional agency timeline. Precision speed means we're efficient, not rushed—every project receives expert attention throughout.",
    image: "/assets/images/about/collab.jpg"
  },
  {
    number: "03",
    title: "Business-Focused Partnership", 
    description: "Every decision drives business outcomes. We create brand experiences that attract customers and fuel growth. Our approach combines innovation and speed with deep business insight, ensuring solutions work for your goals both now and as you scale.",
    image: "/assets/images/about/future.jpg"
  }
];

const capabilities = [
  {
    category: "Visual Identity",
    services: [
      "Logo Design",
      "Visual Systems",
      "Brand Guidelines",
      "Color & Typography"
    ]
  },
  {
    category: "Digital Design",
    services: [
      "User Research",
      "Interface Design",
      "Design Systems",
      "Responsive Design"
    ]
  },
  {
    category: "Web Development",
    services: [
      "Websites & Web Apps",
      "Micro-Apps",
      "Performance Optimization",
      "Modern Frameworks"
    ]
  },
  {
    category: "Graphic Design",
    services: [
      "Posters & Illustrations",
      "Marketing Materials",
      "Annual Reports",
      "Typesetting"
    ]
  },
  {
    category: "Branding & Production",
    services: [
      "Print Materials",
      "Large Format Printing",
      "Signage & Billboards",
      "Installation"
    ]
  },
  {
    category: "Digital Marketing",
    services: [
      "SEO Strategy",
      "Content Marketing",
      "Social Media",
      "Performance Analytics"
    ]
  }
];
---

<Layout 
  title="About Lumina7 | Innovation-Powered Design Studio"
  description="Learn about Lumina7's innovation and speed approach. We combine AI-augmented workflows with strategic expertise to deliver breakthrough brand experiences at the speed of light."
>
  <Header />
  
  <!-- Hero Section -->
  <section class="pt-24 pb-20 px-6 lg:px-8 bg-white">
    <div class="max-w-7xl mx-auto">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-6xl font-medium text-gray-900 mb-8 leading-tight mt-8">
          Innovation-powered design studio operating at the speed of light
        </h1>
      </div>
    </div>
  </section>

  <!-- Team Image Section -->
  <section class="px-6 lg:px-8 bg-white">
    <div class="max-w-7xl mx-auto">
      <div class="aspect-[21/9] bg-gray-100 overflow-hidden mb-16">
        <img 
          src="/assets/images/hero.png" 
          alt="Lumina7 design studio workspace in Cape Town, South Africa"
          class="w-full h-full object-cover"
        />
      </div>
      
      <!-- Stats and Description -->
      <div class="grid lg:grid-cols-2 gap-16 mb-20">
        <div class="space-y-8">
          <div>
            <div class="text-4xl font-bold text-gray-900 mb-2">Cape Town</div>
            <div class="text-lg text-gray-600">Headquarters</div>
          </div>
        </div>
        
        <div class="space-y-6">
          <p class="text-lg text-gray-600 leading-relaxed">
            Lumina7 is an innovation-powered design studio that operates at the speed of light. We help ambitious businesses compete through professional brand experiences—delivered faster than traditional agencies through AI-augmented workflows.
          </p>
          <p class="text-lg text-gray-600 leading-relaxed">
            Our name reflects our approach: Lumina (light) represents both illumination and speed—we bring clarity and rapid execution to every project. By combining breakthrough thinking with expert insight, we deliver professional results without the traditional timeline.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Lumina7 Section -->
  <section class="py-20 px-6 lg:px-8 bg-white">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-medium text-gray-900 mb-16">Why Lumina7</h2>
      
      <div class="space-y-20">
        {whyLumina7.map((item, index) => (
          <div class="grid lg:grid-cols-2 gap-16 items-center">
            <div class={`${index % 2 === 1 ? 'lg:order-2' : ''}`}>
              <div class="aspect-[4/3] bg-gray-100 overflow-hidden">
                <img 
                  src={item.image} 
                  alt={item.title}
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                />
              </div>
            </div>
            
            <div class={`${index % 2 === 1 ? 'lg:order-1' : ''}`}>
              <div class="flex items-start gap-6 mb-6">
                <span class="text-sm text-gray-500 font-medium mt-1">{item.number}</span>
                <div>
                  <h3 class="text-2xl font-medium text-gray-900 mb-4">{item.title}</h3>
                  <p class="text-gray-600 leading-relaxed">{item.description}</p>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Capabilities Section -->
  <section class="py-20 px-6 lg:px-8 bg-gray-50">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-medium text-gray-900 mb-16">Capabilities</h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-12">
        {capabilities.map(capability => (
          <div class="space-y-6">
            <h3 class="text-xl font-medium text-gray-900">{capability.category}</h3>
            <ul class="space-y-3">
              {capability.services.map(service => (
                <li class="text-gray-600 leading-relaxed">{service}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CTA />
  <Footer />
</Layout>

<style>
  /* Scroll effect for images */
  @media (prefers-reduced-motion: no-preference) {
    .aspect-\[4\/3\] img {
      transition: transform 0.5s ease;
    }
    
    .aspect-\[4\/3\]:hover img {
      transform: scale(1.05);
    }
  }
</style>